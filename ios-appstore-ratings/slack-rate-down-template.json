{
  "blocks": [
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": ":warning: :firefox: :testops-apple: iOS Appstore Rating Dropped",
        "emoji": true
      }
    }
  ],
  "attachments": [
    {
      "color": "red",
      "blocks": [
        {
          "type": "table",
          "rows": [
            [
              {
                "type": "rich_text",
                "elements": [
                  {
                    "type": "rich_text_section",
                    "elements": [
                      { "type": "text", "text": "App", "style": { "bold": true } }
                    ]
                  }
                ]
              },
              {
                "type": "rich_text",
                "elements": [
                  {
                    "type": "rich_text_section",
                    "elements": [
                      {
                        "type": "text",
                        "text": "Current Rating",
                        "style": { "bold": true }
                      }
                    ]
                  }
                ]
              },
              {
                "type": "rich_text",
                "elements": [
                  {
                    "type": "rich_text_section",
                    "elements": [
                      {
                        "type": "text",
                        "text": "Last Rating",
                        "style": { "bold": true }
                      }
                    ]
                  }
                ]
              },
              {
                "type": "rich_text",
                "elements": [
                  {
                    "type": "rich_text_section",
                    "elements": [
                      { "type": "text", "text": "Reviews", "style": { "bold": true } }
                    ]
                  }
                ]
              },
              {
                "type": "rich_text",
                "elements": [
                  {
                    "type": "rich_text_section",
                    "elements": [
                      { "type": "text", "text": "Version", "style": { "bold": true } }
                    ]
                  }
                ]
              }
            ],
            [
              { "type": "raw_text", "text": "${{ env.APP_NAME }}" },
              { "type": "raw_text", "text": "${{ env.CURRENT_RATING }}" },
              { "type": "raw_text", "text": "${{ env.PREVIOUS_RATING }}" },
              { "type": "raw_text", "text": "${{ env.RATING_COUNT }}" },
              { "type": "raw_text", "text": "${{ env.VERSION }}" }
            ]
          ]
        }
      ]
    }
  ]
}